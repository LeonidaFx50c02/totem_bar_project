<Window x:Class="totem_bar_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:totem_bar_project"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1280"
        Width="720">

    <Grid x:Name="MenuGrande" Width="720" Height="1280">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="#FFF0F0F0"/>
                <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid x:Name="Categorie" Margin="10,146,568,403">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Height="134" Width="122" Margin="0,0,0,12" FontWeight="Bold">
                <Grid>
                    <Image Source="/panino.png"
                           Height="70"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           Margin="0,16,0,0"/>
                    <TextBlock Text="Panini"
                               FontSize="22"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,75,0,0"/>
                </Grid>
            </Button>
            <Button Grid.Row="1" Height="134" Width="122" Margin="0,0,0,12" FontWeight="Bold">
                <Grid>
                    <Image Source="/dolci.png"
                           Height="70"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"/>
                    <TextBlock Text="Dolci"
                               FontSize="22"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,85,0,0"/>
                </Grid>
            </Button>
            <Button Grid.Row="2" Height="134" Width="122" Margin="0,0,0,12" FontWeight="Bold">
                <Grid>
                    <Image Source="/snacks.png"
                           Height="70"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           Margin="1,10,-2,0"/>
                    <TextBlock Text="Snack"
                               FontSize="22"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="6,75,6,0"/>
                </Grid>
            </Button>
            <Button Grid.Row="3" Height="134" Width="122" Margin="0,0,0,12" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="41*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/calde.png"
                           Height="70"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           Margin="-1,-48,1,0"
                           Grid.ColumnSpan="2"/>
                    <TextBlock Text="Bevande calde"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="5,0,7,-53"
                               Grid.ColumnSpan="2"/>
                </Grid>
            </Button>
            <Button Grid.Row="4" Height="134" Width="122" FontWeight="Bold">
                <Grid>
                    <Image Source="/fredde.png"
                           Height="70"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"/>
                    <TextBlock Text="Bevande fredde"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="6,75,6,0"/>
                </Grid>
            </Button>

        </Grid>
        <Grid x:Name="ordine" Margin="10,882,10,38"/>
        <Grid x:Name="prodotti" Margin="157,146,10,403"/>

    </Grid>

</Window>
